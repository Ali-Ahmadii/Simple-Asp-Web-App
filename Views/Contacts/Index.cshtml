@model IEnumerable<Contacts>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Contacts List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Contacts" asp-action="Create" class="btn-primary btn-primary">
                <i class="bi bi-person-plus"></i> &nbsp;
                 Create A New Contact
            </a>
    </div>
</div>
<br /><br />
<div class="text-center">
<h1>Index Contacts</h1>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="text-center">
                Contacts
            </th>
            <th>
                Phone
            </th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Phone_Number
                </td>
                <td>
                    @obj.Created_Date_Time
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Contacts" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"
                         ></i> Edit</a>
                            <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-danger mx-2"> <i class="bi bi-trash"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>